Database Schema:

Users:
  id: integer (primary)
  username: string
  password_digest: string
  session_token: string
  image_url: string

Artists:
  id: integer (primary)
  name: string
  image_url: string

Albums:
  id: integer (primary)
  title: string
  year: integer
  genre: string #model validation of certain type
  image_url: string
  artist_id: integer #foreign_key

Songs:
  id: integer (primary)
  song_name: string
  length: integer #Not sure this is needed...
  album_id: integer #foreign_key - allow_nil: true (singles?)
  artist_id: integer #foreign_key
  filename: string

Playlists:
  id: integer (primary)
  playlist_name: string
  owner_id: integer #foreign_key #user

Playlist_Songs:
  id: integer (primary)
  song_id: integer #foreign_key
  playlist_id: integer #foreing_key

User_Follows: #Joins Table
  id: integer (primary)
  follower_id: user_id #foreign_key
  followed_user_id: user_id #foreign_key

Playlist_Follows: #Joins Table
  id: integer (primary)
  follower_id: user_id #foreign_key
  followed_playlist_id: playlist_id #foreign_key

Artist_Follows: #Joins Table
  id: integer (primary)
  follower_id: user_id #foreign_key
  followed_artist_id: playlist_id #foreign_key
